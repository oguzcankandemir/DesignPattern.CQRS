@model DesignPattern.CQRS.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <form method="post">
        <label>Product Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Product Stock</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Product Price</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <label>Product Description</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />
        <button class="btn btn-dark">Product Add</button>
    </form>
</div>